/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void HAL_SAI_RxHalfCpltCallback (SAI_HandleTypeDef * hsai) {
	inBufferPtr  = &adcData[BUFFER_SIZE/2];
	outBufferPtr = &adcData[BUFFER_SIZE/2];

	dataReadyFlag = 1;
}

void HAL_SAI_RxCpltCallback (SAI_HandleTypeDef * hsai) {
	inBufferPtr  = &adcData[BUFFER_SIZE/2];
	outBufferPtr = &adcData[BUFFER_SIZE/2];

	dataReadyFlag = 1;
}


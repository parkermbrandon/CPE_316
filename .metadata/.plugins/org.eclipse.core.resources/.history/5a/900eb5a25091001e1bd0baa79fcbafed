/* USER CODE BEGIN PD */
#define AUDIO_BUFFER_SIZE  1024  // Adjust the size as needed

uint16_t audioBuffer1[AUDIO_BUFFER_SIZE];
uint16_t audioBuffer2[AUDIO_BUFFER_SIZE];
uint16_t *currentBuffer;
uint16_t *processingBuffer;

void ProcessAudioData(uint16_t* buffer, uint16_t size);
void TransmitDataOverUART(const char* data);

